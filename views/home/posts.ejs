<style>
    .heart {
        cursor: pointer;
        height: 50px;
        width: 50px;
        margin-top: -10px;
        background-image: url('https://abs.twimg.com/a/1446542199/img/t1/web_heart_animation.png');
        background-position: left;
        background-repeat: no-repeat;
        background-size: 2900%;
    }

    .heart:hover {
        background-position: right;
    }

    .is_animating {
        animation: heart-burst .8s steps(28) 1;
    }

    @keyframes heart-burst {
        from {
            background-position: left;
        }

        to {
            background-position: right;
        }
    }
</style>
<% if(posts.length != 0) { %>
<% posts.forEach(post => { %>
<div class="post px-2 w-full h-auto border-b theme-border-gray-300 cursor-pointer">
    <div class="postHeader flex w-full pb-2 pt-2 ">
        <img src="https://abs.twimg.com/sticky/default_profile_images/default_profile_normal.png" alt=""
            class="h-12 w-12 rounded-full">
        <a href="#" class="block py-2 ml-2 -mt-2 text-center theme-text rounded-lg hover:border-purple-light hover:bg-grey-lighter text-base
                                font-semibold"><%= post.author %>
            <div
                class="float-right font-bold cursor-pointer hover:text-blue-400 rounded-full mt-1 ml-3 align-middle text-center">
                <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </div>
    </div>
    <div class="postBody w-full ml-12 px-2 -mt-6">
        <p class="w-11/12 text-left"><%- post.caption %></p>
        <% if(post.static_url != null){ %>
        <img src="<%= post.static_url %>" alt="" class="w-11/12 h-auto rounded-lg mt-2">
        <% } %>
    </div>
    <div class="postActions w-full mt-3 px-2">
        <ul class="w-full flex">
            <li class="mx-12 rounded-full text-center cursor-pointer hover:text-blue-200 flex">
                C
                <span class="text-gray-500  ml-2" id="<%= post.tweetID %>_commentsCount"></span>
            </li>
            <li class="mx-12 rounded-full p-1 text-center cursor-pointer hover:text-blue-400 flex">
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                </svg>
                <span class="text-gray-500 -mt-1 ml-2"></span>
            </li>
            <li class="mx-12 rounded-full text-center cursor-pointer flex">
                <div class="heart"></div>
                <span class="text-gray-500 mt-1 -ml-2" id="<%= post.tweetID %>_likesCount"></span>
            </li>
            <li class="mx-12 rounded-full text-center cursor-pointer hover:text-orange-400 flex">
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                </svg>
                <span class="text-gray-500 -mt-1 ml-2"></span>
            </li>
        </ul>
    </div>
</div>
<% })} %>
<div class="newPostBanner w-full pb-2 pt-2 border-b theme-border-gray-300 text-center align-middle">
    <h1 class="text-xl text-blue-400 font-bold">All caught up</h1>
    <span class="text-gray-500 text-sm">Follow some more people to show their posts here.</span>
</div>